<?xml version="1.0"?>
<bindings xmlns="http://www.mozilla.org/xbl"
          xmlns:xul="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
          xmlns:xbl="http://www.mozilla.org/xbl">
  <binding id="ccmc-media-item" extends="chrome://global/content/bindings/richlistbox.xml#richlistitem">
    <content>
      <xul:hbox flex="1">      
        <xul:spacer anonid="thumbnail" class="thumbnail"/> <!--XXX: Why makes size fixed here? -->
        <xul:vbox flex="1">
          <hbox>
            <xul:label xbl:inherits="value=title" crop="end" flex="1" />
            <xul:image xbl:inherits="src=licensethumbnail" class="licensethumbnail"/> <!--XXX: Why makes size fixed here? -->
          </hbox>
        </xul:vbox>
      </xul:hbox>
    </content>
    <implementation>
      <property name="thumbnail"
          onset="document.getAnonymousElementByAttribute(this, 'anonid', 'thumbnail').style.backgroundImage = 'url(\'' + val + '\')';"/>-->
    </implementation>
  </binding>
</bindings>
